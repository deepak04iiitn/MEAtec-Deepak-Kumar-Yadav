{
  "name": "meatec",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon backend/index.js",
    "start": "node backend/index.js",
    "build": "npm install && npm install --prefix frontend && npm run build --prefix frontend",
    "prisma:generate": "prisma generate --schema=backend/prisma/schema.prisma",
    "prisma:push": "prisma db push --schema=backend/prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema=backend/prisma/schema.prisma",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd backend && jest",
    "test:backend:watch": "cd backend && jest --watch",
    "test:backend:coverage": "cd backend && jest --coverage",
    "test:frontend": "cd frontend && npm test",
    "test:frontend:watch": "cd frontend && npm test -- --watch",
    "test:frontend:coverage": "cd frontend && npm test -- --coverage"
  },
  "repository": {
    "type": "git",
